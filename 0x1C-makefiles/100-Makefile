CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean: #deletes all emacs and Vim temporary files along with the executable
	$(RM) *~ $(NAME) 

oclean: #deletes the object files
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
